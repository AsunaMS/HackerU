<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#78C8ED"
    app:cardCornerRadius="40dp"
    >
<LinearLayout
    android:layout_margin="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >







    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/teacherItem_TV_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="my name"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subjects:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/teacherItem_TV_subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="java, c"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price:"
            android:textSize="20sp"

            />
        <TextView
            android:id="@+id/teacherItem_TV_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="100"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about me:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/teacherItem_TV_aboutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hello"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level:"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/teacherItem_TV_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hello"
            android:textSize="20sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/teacherItem_BTN_contactMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contact me"/>

</LinearLayout>

<LinearLayout
    android:id="@+id/teacherItemRateHolder"
    android:layout_gravity="bottom|right"
    android:layout_margin="32dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="8dp"
        android:fontFamily="@font/advent_pro_bold"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Teacher Rating">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/teacherItemRateStar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_24"/>
    <ImageView
        android:id="@+id/teacherItemRateStar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_24"/>
    <ImageView
        android:id="@+id/teacherItemRateStar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_24"/>
    <ImageView
        android:id="@+id/teacherItemRateStar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_24"/>
    <ImageView
        android:id="@+id/teacherItemRateStar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_border_24">
    </ImageView>
    </LinearLayout>
</LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_rate_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_margin="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#78C8ED"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/button_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHighlight="@color/black"
            android:padding="0dp"
            android:backgroundTint="#C5B639"
            android:text="Rate Me">
        </Button>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>