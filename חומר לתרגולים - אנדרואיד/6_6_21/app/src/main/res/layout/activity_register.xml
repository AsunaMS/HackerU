<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient_drawable"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/register_EDT_firstName"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:hint="First name"
            tools:layout_editor_absoluteX="44dp"

            tools:layout_editor_absoluteY="59dp"
            tools:text="first name" />

        <EditText
            android:id="@+id/register_EDT_lastName"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:hint="Last name"
            android:text=""
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="135dp" />

        <EditText
            android:id="@+id/register_EDT_email"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:hint="Email"
            android:text=""
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="211dp" />

        <EditText
            android:id="@+id/register_EDT_password"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:hint="Password"
            android:text=""
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="285dp" />

    </LinearLayout>


    <Button
        android:id="@+id/register_BTN_register"
        android:layout_width="200dp"
        android:layout_height="78dp"

        android:layout_marginTop="50dp"
        android:text="Registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/register_BTN_login"
        android:layout_width="159dp"
        android:layout_height="82dp"
        android:layout_marginTop="50dp"
        android:text="login"
        app:layout_constraintEnd_toEndOf="@+id/register_BTN_register"
        app:layout_constraintStart_toStartOf="@+id/register_BTN_register"
        app:layout_constraintTop_toBottomOf="@+id/register_BTN_register" />

</androidx.constraintlayout.widget.ConstraintLayout>