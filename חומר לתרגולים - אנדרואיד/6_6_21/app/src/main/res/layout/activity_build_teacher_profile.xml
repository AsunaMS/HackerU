<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activity_buildTeacherProfile"
    android:background="@drawable/my_gradient_drawable">

    <LinearLayout
        android:id="@+id/buildTeacherProfile_LL_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:text="@string/about_me"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                />
            <EditText
                android:id="@+id/buildTeacherProfile_EditText_aboutMe"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@color/browser_actions_bg_grey"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:scrollbars="vertical"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:text="@string/subjects"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    />

                <Spinner
                    android:id="@+id/searchTeacher_SPINNER_subjects"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:backgroundTint="#A9B3B1"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/buildTeacherProfile_TextView_subjects"
                android:layout_width="250dp"
                android:layout_height="100dp"

                android:background="@color/browser_actions_bg_grey"
                android:gravity="top|left"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:scrollbars="vertical" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>


            <EditText
               android:id="@+id/buildTeacherProfile_EditText_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:hint="the price"
                android:inputType="number"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="level"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>


            <Spinner
                android:id="@+id/searchTeacher_SPINNER_level"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                />

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/buildTeacherProfile_BTN_save"
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildTeacherProfile_LL_top"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        />


</RelativeLayout>